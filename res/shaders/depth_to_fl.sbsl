
render_pass render_passes::depth_to_fl : compute;

require vertex::p2;

vertex {
	void main(void)
	{
		gl_Position = vec4((in)pos, 0, 1.0);
	}
}

fragment {
	set fb {
		sampler2D depth_buffer;
		sampler2D depth_buffer_max;
	};

	out vec2 depth_fl;

	void main(void)
	{
		float mx = texture(fb.depth_buffer_max, gl_FragCoord.xy, 0).x;
		(out)depth_fl = vec2(
			texture(fb.depth_buffer, gl_FragCoord.xy, 0).x,
			mx == 0.0 ? 1.0 : mx);
	}
}